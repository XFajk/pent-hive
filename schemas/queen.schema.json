{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/queen.schema.json",
  "title": "Pent-Hive Queen",
  "type": "object",
  "required": ["pent_hive_spec", "metadata", "steps"],
  "additionalProperties": false,
  "properties": {
    "pent_hive_spec": { "type": "string", "pattern": "^\\d+\\.\\d+$" },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "hive", "run"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "hive": { "type": "string" },
          "hive_selector": { "type": "object", "additionalProperties": true },
          "run": {
            "type": "array",
            "items": { "type": "string" }
          },
          "depends_on": {
            "type": "array",
            "items": { "type": "string" }
          },
          "parallel": { "type": "boolean", "default": false },
          "timeout_s": { "type": "integer", "minimum": 1 },
          "on_failure": {
            "type": "string",
            "enum": ["fail_fast", "continue", "mark_and_continue"],
            "default": "fail_fast"
          },
          "assertion": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    "assertions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": { "type": "string" },
          "mapping": { "type": "object", "additionalProperties": true }
        }
      }
    },
    "timeout_s": { "type": "integer", "minimum": 1 }
  }
}