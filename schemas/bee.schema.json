{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/bee.schema.json",
  "title": "Pent-Hive Bee",
  "type": "object",
  "required": ["pent_hive_spec", "metadata", "execution"],
  "additionalProperties": false,
  "properties": {
    "pent_hive_spec": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "metadata": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "params": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "positional": { "type": "integer", "minimum": 0 },
            "named": {
              "type": "array",
              "items": { "type": "string" }
            },
            "defaults": { "type": "object", "additionalProperties": true }
          }
        }
      }
    },
    "build": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "dependencies": {
          "type": "array",
          "items": { "$ref": "#/definitions/dependency" }
        },
        "steps": {
          "type": "array",
          "items": { "$ref": "#/definitions/step" }
        }
      }
    },
    "execution": {
      "type": "object",
      "required": ["steps"],
      "additionalProperties": false,
      "properties": {
        "dependencies": {
          "type": "array",
          "items": { "$ref": "#/definitions/dependency" }
        },
        "steps": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/definitions/step" }
        },
        "reset_steps": {
          "type": "array",
          "items": { "$ref": "#/definitions/step" }
        },
        "artifacts": {
          "type": "array",
          "items": { "type": "string" }
        },
        "env": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "resources": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "cpu": { "type": "string" },
            "memory": { "type": "string" },
            "network": { "type": "boolean" }
          }
        },
        "privileged": { "type": "boolean", "default": false },
        "retry_policy": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "attempts": { "type": "integer", "minimum": 0 },
            "backoff": { "type": "string", "enum": ["none", "linear", "exponential"] }
          }
        },
        "exit_codes": {
          "type": "object",
          "additionalProperties": {
            "type": ["string", "integer"]
          }
        }
      }
    }
  },
  "definitions": {
    "dependency": {
      "oneOf": [
        { "type": "string", "minLength": 1 },
        {
          "type": "object",
          "required": ["type", "value"],
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": ["HIVE", "CMD", "FILE", "DIR", "SHELL"]
            },
            "value": { "type": "string" },
            "optional": { "type": "boolean", "default": false }
          }
        }
      ]
    },
    "step": {
      "oneOf": [
        { "type": "string", "minLength": 1 },
        {
          "type": "object",
          "required": ["run"],
          "additionalProperties": false,
          "properties": {
            "name": { "type": "string" },
            "run": {
              "anyOf": [
                { "type": "string" },
                { "type": "array", "items": { "type": "string" } }
              ]
            },
            "shell": { "type": "string" },
            "timeout_s": { "type": "integer", "minimum": 1 },
            "env": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            }
          }
        }
      ]
    }
  }
}